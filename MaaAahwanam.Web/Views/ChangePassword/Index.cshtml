            </li>
        </ul>
        <ul>
            <li>
                <label>Confirm Password<span>*</span></label>
                @*<input type="text" id="cpwd" name="cpwd" placeholder="Confirm Password">*@
                @Html.TextBoxFor(Model => Model.Password, new {@class = "form-control", @id = "cpwd", @name = "cpwd", placeholder = "Confirm Password", required = "required" })
            </li>
        </ul>
        <div class="btn-left">
            @*<button type="submit" id="btnSubmit" class="btn btn btn-orange m-l-0" onclick="check();"><i class="ti-save"></i>Save</button>*@
            <button class="btn text-muted text-center btn-success" name="Command" value="Register" type="submit" onclick="check();">Register</button>
            <button type="submit" class="btn btn btn-red" ><i class=" ti-close"></i>Cancel</button>
            <div class="clear"></div>
        </div>
