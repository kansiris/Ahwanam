
@{
    ViewBag.Title = "Add Package";
    Layout = "~/Views/SharedWeb/NVendorMasterPage.cshtml";
}

<div class="page-content container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="nav-tabs-vertical">
                <div class="tab-content padding-vertical-15">
                    @using (Html.BeginForm("addpackage", "NVendorAddPackage", FormMethod.Post))
                    {
                        <form class="">
                            <div class="row">
                                <input type="hidden" class="form-control" name="id" value="@ViewBag.vendormasterid" autocomplete="off">
                                @*<div class="form-group col-md-12">



                                        <select class="border-0 ml-auto" id="selectedservice" name="type">
                                            <option value="">Service Type</option>

                                            @*<option value="Hotel">Hotel</option>
                                                <option value="Resort">Resort</option>
                                                <option value="Venues">Convetion Hall</option>
                                            <option value="Venue">Venue</option>
                                            <option value="Catering">Catering</option>
                                            <option value="Photography">Photography</option>
                                            <option value="Decorator">Decorator</option>
                                            <option value="Others">Others</option>


                                        </select>


                                    </div>*@



                                <div class="form-group col-sm-6">
                                    <label class="control-label" for="inputBasicFirstName">Type</label>

                                    <select class="form-control form-control-lg" id="selectbox2" name="type">
                                        <option id="price">Type</option>
                                        @if (ViewBag.venuerecord != null)
                                        {
                                            foreach (var item in ViewBag.venuerecord)
                                            {
                                                <option value="@item.subid,@item.type,@item.subtype"><span>@item.type - @item.subtype</span></option>}
                                        }
                                        @*// <option value="1100">Veg (<span>1100</span>/p)</option>*@
                                    </select>
                                </div>






                                <div class="form-group col-md-12">
                                    <label class="control-label" for="inputBasicFirstName">Package Name</label>

                                    <input type="text" class="form-control" name="PackageName" placeholder="Package Name" autocomplete="off" required>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label class="control-label" for="inputBasicFirstName">Package Price</label>

                                    <input type="number" class="form-control" name="PackagePrice" placeholder="Package Price" autocomplete="off"required>
                                </div>
                          
                            <div class="form-group col-sm-12">
                                <label class="control-label" for="inputBasicFirstName">Package Description</label>

                                <textarea class="form-control" name="Packagedec" placeholder="Package Description" autocomplete="off" required></textarea>
                            </div>
                            <div class="form-group col-sm-12">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                                </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/newdesign/js/jquery-3.3.1.min.js"></script>
