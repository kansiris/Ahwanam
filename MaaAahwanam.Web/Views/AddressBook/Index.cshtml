@model MaaAahwanam.Models.UserAddBook
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/SharedWeb/DashBoardMaster.cshtml";
}

@section Navigation
{
    <div class="breads">
        <div class="breads_inner">
            <div class="pageWidth">
                <div class="title">
                    <h3>Address Book</h3>
                </div>
                <div class="breadcrumbs">
                    <ul>
                        @if (ViewBag.Type == "User")
                        {
                            <li><a href="~/index/Index">Home</a></li>
                        }
                        <li><i class="breads_arrow"></i></li>
                        <li>Address Book</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="dashInner">
    <div class="tickets_header">
        <h3>Address Book</h3>
        <a href="#newAddress" class="popup-with-move-anim orange">Create New</a>
        <a href="#csv" class="popup-with-move-anim">Upload CSV</a>
    </div>
    <!-- popup -->
    <div id="csv" class="zoom-anim-dialog mfp-hide small-dialog">
        <div class="popup-box pop-content">
            <div class="popup-head">
                <h3>Upload CSV</h3>
            </div>
            <!-- /popup-head -->
            <div class="popup-space popup-desc-space">
                <div class="dashboardList">
                    <form id="contact_form" class="form">
                        <ul>
                            <li class="fullwidth">
                                <label>Upload CSV</label>
                                <input type="file">
                            </li>
                        </ul>
                        <ul>
                            <li class="fullwidth"><button type="submit" name="submit" class="btn btn-green" value="submit">Submit <i class="ti-angle-double-right"></i></button></li>
                        </ul>
                    </form>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- end popup -->
    <!-- popup -->
    <div id="newAddress" class="zoom-anim-dialog mfp-hide small-dialog">
        <div class="popup-box pop-content">
            <div class="popup-head">
                <h3>Create New Address</h3>
            </div>
            <!-- /popup-head -->
            <div class="popup-space popup-desc-space">
                <div class="dashboardList">
                    @using (Html.BeginForm("Index", "AddressBook", FormMethod.Post, new { @class = "form", @id = "contact_form" }))
                    {
                        @*<form id="contact_form" class="form">*@
                        <ul>
                            <li>
                                <label>Name</label>
                                @Html.TextBoxFor(Model => Model.PersonName, new { @id = "name", @name = "name", placeholder = "Name" })
                            </li>
                            <li>
                                <label>Phone</label>
                                @Html.TextBoxFor(Model => Model.PersonPhone, new { @id = "phone", @name = "phone", placeholder = "Phone" })
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <label>Email ID</label>
                                @Html.TextBoxFor(Model => Model.PersonEmail, new { @id = "emailid", @name = "emailid", placeholder = "Email Id" })
                            </li>
                            <li>
                                <label>City</label>
                                @Html.TextBoxFor(Model => Model.PersonCity, new { @id = "city", @name = "city", placeholder = "City" })
                            </li>
                        </ul>

                        <ul>
                            <li>
                                <label>Address</label>
                                @Html.TextBoxFor(Model => Model.PersonAddress, new { @id = "address", @name = "address", placeholder = "Address" })
                            </li>
                            <li>
                                <label>Location</label>
                                @Html.TextBoxFor(Model => Model.PersonLocation, new { @id = "loc", @name = "loc", placeholder = "Location" })
                            </li>
                        </ul>
                        <ul>
                            <li class="fullwidth"><button type="submit" name="submit" class="btn btn-green" value="submit">Submit <i class="ti-angle-double-right"></i></button></li>
                        </ul>
                        @*</form>*@
                    }
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- end popup -->
    <!-- /dashDetails -->
    <div class="dashboardList dashboardList-nospace">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <table class="responsive" id="AddressBookList">
                <thead>
                    <tr>
                        <th style="width: 10%; cursor: pointer;"><a href="#" class="selectall"><a href="#" title="Delete Record"><i class="ti-trash close"></i></a></a></th>
                        <th style="width: 20%; cursor: pointer;">Name</th>
                        <th style="width: 34%; cursor: pointer;">Address</th>
                        <th style="width: 15%; cursor: pointer;">Phone</th>
                        <th style="width: 21%; cursor: pointer;">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.sp_AddressBook1)
                    {
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>@item.PersonName</td>
                            <td>
                                <table>
                                    <tr>
                                        <td>@item.PersonAddress<br />@item.PersonLocation<br />@item.PersonCity</td>
                                    </tr>
                                </table>
                            </td>
                            <td>@item.PersonPhone</td>
                            <td>@item.PersonEmail</td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        <div class="clear"></div>

    </div>
    <!-- /dashboardList -->

</div>
<script type="text/javascript">
    window.onload = function () {
        $('#AddressBookList').dataTable({ bFilter: false, ordering: true, bLengthChange: false, "pageLength": 5 });
    };
</script>


