
@{
    ViewBag.Title = "Add Deal";
    Layout = "~/Views/SharedWeb/NVendorMasterPage.cshtml";
}

<div class="page-content container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="nav-tabs-vertical">
                <div class="tab-content padding-vertical-15">
                    <form class="">
                        <div class="row">
                            <div class="form-group col-md-12">
                                <input type="text" class="form-control" name="DealName" placeholder="Deal Name" autocomplete="off">
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" name="OriginalPrice" placeholder="Original Price" autocomplete="off">
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" name="DealPrice" placeholder="Deal Price" autocomplete="off">
                            </div>
                            <div class="form-group col-md-12">
                                <input type="text" class="form-control" name="Guests" placeholder="Minimum Number Of Guests" autocomplete="off">
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" name="StartDate" placeholder="Start Date" autocomplete="off">
                            </div>
                            <div class="form-group col-sm-6">
                                <input type="text" class="form-control" name="EndDate" placeholder="End Date" autocomplete="off">
                            </div>
                            <div class="form-group col-sm-6">
                                <div class="checkbox-custom checkbox-primary">
                                    <input type="checkbox" id="inputUnchecked">
                                    <label for="inputUnchecked">Morning</label>
                                </div>
                                <div class="checkbox-custom checkbox-primary">
                                    <input type="checkbox" id="inputUnchecked">
                                    <label for="inputUnchecked">Evening</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" placeholder="Deal Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

