
@{
    ViewBag.Title = "Add Package";
    Layout = "~/Views/SharedWeb/NVendorMasterPage.cshtml";
}

<div class="page-content container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="nav-tabs-vertical">
                <div class="tab-content padding-vertical-15">
                    @using (Html.BeginForm("addpackage", "NVendorAddPackage", FormMethod.Post))
                    {
                        if (ViewBag.pacakagerecord != null)
                        {
                            foreach (var item in ViewBag.pacakagerecord)
                            {
                        <form class="">
                            <div class="row">
                                <input type="hidden" class="form-control" name="id" value="@item.PackageID" autocomplete="off">
                               



                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" name="PackageName" placeholder="@item.VendorType-@item.VendorSubType" autocomplete="off">
                                </div>





                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control" name="PackageName" placeholder="Package Name" autocomplete="off">
                                </div>
                                <div class="form-group col-sm-12">
                                    <input type="number" class="form-control" name="PackagePrice" placeholder="Package Price" autocomplete="off">
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="Packagedec" placeholder="Package Description" autocomplete="off"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">update</button>
                            </div>
                        </form>
                                }
                            }
                        }
                </div>
            </div>
        </div>
    </div>
</div>

