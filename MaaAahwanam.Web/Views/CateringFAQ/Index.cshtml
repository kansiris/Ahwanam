@model MaaAahwanam.Models.VendorsCatering
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>:: Catering FAQ'S ::</title>
    <link rel="stylesheet" type="text/css" href="~/newdesign/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/newdesign/css/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/newdesign/css/customstyles.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 logo">
                <a href="/HomePage"><img src="~/newdesign/images/logo.png" alt="Logo"></a>
            </div>
            <div class="col-xs-12 col-xs-offset-0 col-md-2 col-md-offset-4 header-simple-phone">
                <p>Customer Service</p>
                <span class="red"><i class="fa fa-phone" aria-hidden="true"></i> 1800 180 180</span>
            </div>
        </div>
    </div>
    <div class="container border-default">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 margin-top">
                <h4>Create a Free Ahwanam account</h4>
            </div>
        </div>
        <div class="row progress-area text-center">
            <div class="progress-ui">
                <div class="complete"><span>1</span></div>
                <div class="complete"><span>2</span></div>
                <div class="complete"><span>3</span></div>
                <div><span>4</span></div>
            </div>
            <div class="progress-content">
                <div>General Information</div>
                <div>Photo Gallery</div>
                <div>Frequently Asked Questions</div>
                <div>Promotions</div>
            </div>
        </div>
        <form method="post">
            <div class="block">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 form-headding border-default-top border-default-bottom">
                        <h4><i class="fa fa-question-circle" aria-hidden="true"></i> Frequently Asked Questions</h4>
                    </div>
                </div>
                <div class="row margin-top margin-bottom">
                    <div class="col-xs-10 col-sm-10 col-md-10 margin-left margin-right padding-top-10 light-sky-blue-bg">
                        <p class="grey">
                            <b>Answer the FAQs for your category: Hotels­­. This information will appear on your storefront. Your answers will help couples understand the services you offer much better.</b>
                        </p>
                    </div>
                </div>
            </div>


            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">1</span> Veg Price Starts At?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="row margin-top-30 margin-bottom">
                            <label class="col-xs-12 col-sm-6 col-md-6">Veg Lunch Price Starts At</label>
                            <div class="form-group-1 col-xs-12 col-sm-6 col-md-6">
                                @*<input type="text" class="form-control" placeholder="">*@
                                <i class="fa fa-inr fa-lg" aria-hidden="true" style="left:25px; bottom:10px"></i>
                                @Html.TextBoxFor(model => model.Veg, new { @class = "form-control1", placeholder = "" })
                            </div>
                        </div>
                       
                    </div>
                    
                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">2</span> Non-Veg Price Starts At?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="row margin-top-30 margin-bottom">
                            <label class="col-xs-12 col-sm-6 col-md-6">Non-Veg Lunch Price Starts At</label>
                            <div class="form-group-1 col-xs-12 col-sm-6 col-md-6">
                                <i class="fa fa-inr fa-lg" aria-hidden="true" style="left:25px; bottom:10px"></i>
                                @Html.TextBoxFor(model => model.NonVeg, new { @class = "form-control1", placeholder = "" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">3</span> Order Limit?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">

                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="row margin-top-30 margin-bottom">
                            <label class="col-xs-12 col-sm-6 col-md-6">Minimum Order</label>
                            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                                @*<input type="text" class="form-control" placeholder="">*@
                                @Html.TextBoxFor(model => model.MinOrder, new { @class = "form-control", placeholder = "" })
                            </div>
                        </div>
                        <div class="row margin-top margin-bottom-30">
                            <label class="col-xs-12 col-sm-6 col-md-6">Maximum Order</label>
                            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                                @*<input type="text" class="form-control" placeholder="">*@
                                @Html.TextBoxFor(model => model.MaxOrder, new { @class = "form-control", placeholder = "" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">4</span> Mineral Water Included?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 padding-left-0 padding-right-0">
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="MineralWaterIncluded" id="MineralWaterIncluded" value="Yes"><span></span>Yes</label>
                        </div>
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="MineralWaterIncluded" id="MineralWaterIncluded" value="No"><span></span>No</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">5</span> Menu items</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">

                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="row margin-top-30 margin-bottom">
                            <label class="col-xs-12 col-sm-6 col-md-6">Menu items</label>
                            <div class="form-group col-xs-12 col-sm-6 col-md-6">
                                @*<input type="text" class="form-control" placeholder="">*@
                                @Html.TextAreaFor(model => model.Menuitems, new { @class = "form-control", placeholder = "",@rows="5" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">6</span> Live Cooking Station?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 padding-left-0 padding-right-0">
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="LiveCookingStation" id="LiveCookingStation" value="Yes"><span></span>Yes</label>
                        </div>
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="LiveCookingStation" id="LiveCookingStation" value="No"><span></span>No</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="block border-default margin-top-30">
                <div class="row margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 border-default-bottom">
                        <h5 class="bold"><span class="legend-count">7</span> Transport Included?</h5>
                    </div>
                </div>
                <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                    <div class="col-xs-12 col-sm-12 col-md-12 padding-left-0 padding-right-0">
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="TransportIncluded" id="TransportIncluded" value="Yes"><span></span>Yes</label>
                        </div>
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label><input type="radio" name="TransportIncluded" id="TransportIncluded" value="No"><span></span>No</label>
                        </div>
                    </div>
                </div>
            </div>
         
            <div class="col-xs-12 col-sm-12 col-md-12 padding-left-0 padding-right-0 border-default-bottom hr-line"></div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    @*<a href="/VendorSignUp4" class="btn btn-default red-bg white">Save</a>*@
                    <input type="submit" value="Next" class="btn btn-default red-bg white margin-left" />
                    <a href="/AvailableServices?id=@ViewBag.id" class="btn btn-default red-bg white margin-left">Skip</a>
                </div>
            </div>
        </form>
    </div>
    <script type="text/javascript" src="~/newdesign/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/newdesign/js/bootstrap.js"></script>
    <script>
        //Hall Type checkBoxes
        $(".HallType input[type='checkbox']").change(function () {
            var arr = [], i = 0;
            $(".HallType input[type='checkbox']:checked").each(function () {
                arr[i++] = $(this).parent("label").text();
            });
            $('#HallType').val(arr);
        });

        //Food Type checkBoxes
        $(".Foodtype input[type='checkbox']").change(function () {
            var arr = [], i = 0;
            $(".Foodtype input[type='checkbox']:checked").each(function () {
                arr[i++] = $(this).parent("label").text();
            });
            $('#Food').val(arr);
        });
    </script>
</body>
</html>
