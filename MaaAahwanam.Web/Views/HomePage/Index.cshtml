@section scripts{
    <script type="text/javascript">

/*-------- Chained Jquery --------*/
$(function() {

    /* For jquery.chained.js */
    $("#series").chained("#mark");
    $("#model").chained("#series");
  });
/*-------- Chained Jquery --------*/

/*-------- Equal Heights --------*/
$(document).ready(function(){
	if(screen.width <  481){
		$(".gallery-left").height();
		}else{
			$(".gallery-left").height($(".gallery-right").height());
			}
	});
/*-------- Equal Heights --------*/

</script>
    }

