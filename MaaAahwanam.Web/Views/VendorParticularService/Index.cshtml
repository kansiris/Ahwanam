<script src="~/newdesign/js/jquery.datetimepicker.full.js"></script>
<script type="text/javascript">
    //<!-------- Height Equal ----------->
    $(document).ready(function () {
        var leftheight = $("#vendor-imgs").height();
        $("#vendor-content").height(leftheight);
    });
    //<!-------- Height Equal ----------->

    //<!-------- Body Scroll Top ----------->
    $("#topicon").click(function () {
        $("html, body").animate({
            scrollTop: $("#body-top").offset().top
        }, "slow");
    });
    $("#topicon").hover(function () {
        $(this).css("opacity", "1");
    });
    $("#topicon").mouseleave(function () {
        $(this).css("opacity", ".7");
    });
    $(window).on("scroll ready", function () {
        var ScrollTop = $(this).scrollTop();
        if (ScrollTop > 500) {
            $("#topicon").css("opacity", ".7");
        } else {
            $("#topicon").css("opacity", "0");
        }
    });
    //<!-------- Body Scroll Top ----------->

    //<!-------- Check in, Check out Calender ----------->
    $('.some_class').datetimepicker({
        minDate: '-1970/01/00', // yesterday is minimum date
        maxDate: '+1971/01/03' // and tommorow is maximum date calendar
    });
    //<!-------- Check in, Check out Calender ----------->

    //<!-------- Vendor Alert Info ----------->
    $(".vendor-descrption > span").click(function () {
        $(".vendor-descrption-alert").css("display", "block");
        $(".vendor-descrption-alert").children("p").empty();
        $(".vendor-descrption-alert").children(".content").children("p").append($(this).prev("p").text());
    });

    $(".vendor-descrption-alert > .content > i.fa-times").click(function () {
        $(this).parents(".vendor-descrption-alert").css("display", "none");
    });
    //<!-------- Vendor Alert Info ----------->

    //<!-------- View Details Alert ----------->
    $("button.view-details").click(function () {
        //$(document).on('click','button.view-details',function(){
        $(".view-details-alert").css("display", "block");
        $(".view-details-alert > .content > h3").empty().append($(this).parents("div.row").prevAll("div.row").children("div").children("h4").text());
        var contentLen = $(this).parents("div.row").prevAll("div.row").children(".bottom-content").children(".content").length;
        $(".view-details-alert > .content > ul").remove();
        $(".view-details-alert > .content").append('<ul class="col-xs-12 col-sm-12 col-md-6 col-lg-6"></ul>');
        for (var i = 0; i < contentLen; i++) {
            $(".view-details-alert > .content > ul").append('<li></li>');
            $('.view-details-alert').find('li').eq(i).append($(this).parents('.package-details').find('.content').eq(i).text());
        }
        //calender Text boxes Empty
        $(".checkin-out").find("input.check-in").val("");
        $(".checkin-out").find("input.check-out").val("");
        $(".checkin-out").find("input.persons").val("");
        $(".checkin-out").find("input.extra-persons").val("");
        //calender Text boxes Empty
    });

    $(".view-details-alert > .content > i.fa-times").click(function () {
        $(this).parents(".view-details-alert").css("display", "none");
    });
    //<!-------- View Details Alert ----------->

    //<!-------- Cart Details ----------->
    $(".book-now").click(function () {
        $(".cart-details .cart").append('<div class="block"></div>');
        var h3Text = $(this).parents(".content").find("h3").text();
        var CheckInText = $(this).parents(".checkin-out").find("input.check-in").prev("label").text();
        var CheckInTime = $(this).parents(".checkin-out").find("input.check-in").val();
        var CheckOutText = $(this).parents(".checkin-out").find("input.check-out").prev("label").text();
        var CheckOutTime = $(this).parents(".checkin-out").find("input.check-out").val();
        var PersonsNoText = $(this).parents(".checkin-out").find("input.persons").prev("label").text();
        var Persons = $(this).parents(".checkin-out").find("input.persons").val();
        var ExtraPersonsNoText = $(this).parents(".checkin-out").find("input.extra-persons").prev("label").text();
        var ExtraPersons = $(this).parents(".checkin-out").find("input.extra-persons").val();
        $(".cart-details .cart > .block:last-of-type").append('<h3>' + h3Text + '</h3>' + '<p>' + '<b>' + CheckInText + '</b>' + ' : ' + CheckInTime + '</p>' + '<p>' + '<b>' + CheckOutText + '</b>' + ' : ' + CheckOutTime + '</p>' + '<p>' + '<b>' + PersonsNoText + '</b>' + ' : ' + Persons + '</p>' + '<p>' + '<b>' + ExtraPersonsNoText + '</b>' + ' : ' + ExtraPersons + '</p>' + '<i class="fa fa-times" aria-hidden="true"></i>');
        $(".view-details-alert").css("display", "none");
        removecarttext();
    });
    function removecarttext() {
        if ($(".cart .block").length >= 1) {
            $(".cart").addClass(" remove-content");
        } else {
            $(".cart").removeClass(" remove-content");
        }
    }
    $('body').on('click', '.packages .cart-details .cart > .block i.fa-times', function () {
        if ($(".cart .block").length == 1) {
            $(".cart").removeClass(" remove-content");
        } else {
            $(".cart").addClass(" remove-content");
        }
        $(this).parent(".block").remove();
    });
    //<!-------- Cart Details ----------->
</script>
