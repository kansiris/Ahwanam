@model MaaAahwanam.Models.Eventsandtips
@{
    ViewBag.Title = ViewBag.Pagetitle;
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/plugins/validationengine/css/validationEngine.jquery.css" />
    <link href="~/Assets/css/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/plugins/uniform/themes/default/css/uniform.default.css" />
    <link rel="stylesheet" href="~/Assets/plugins/inputlimiter/jquery.inputlimiter.1.0.css" />
    <link rel="stylesheet" href="~/Assets/plugins/chosen/chosen.min.css" />
    <link rel="stylesheet" href="~/Assets/plugins/colorpicker/css/colorpicker.css" />
    <link rel="stylesheet" href="~/Assets/plugins/tagsinput/jquery.tagsinput.css" />
    <link rel="stylesheet" href="~/Assets/plugins/switch/static/stylesheets/bootstrap-switch.css" />
    <link rel="stylesheet" href="~/Assets/css/bootstrap-fileupload.min.css" />
    <link href="~/Assets/plugins/jquery.fancybox-1.3.4/fancybox/jquery.fancybox-1.3.4.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}

<h2>@ViewBag.Pagetitle</h2>
@using (Html.BeginForm("Index", "Eventsandtips", FormMethod.Post, new { @class = "form-horizontal", @id = "popup-validation", enctype = "multipart/form-data" }))
{
    <div class="container">
        <table class="table" style="width:500px;margin-left:170px;margin-top:30px">
            <tr>
                <td>Tilte:</td>
                <td>@Html.TextBoxFor(m => m.Title)</td>
            </tr>
            <tr>
                <td>Description:</td>
                <td>@Html.TextBoxFor(m => m.Description)</td>
            </tr>
            <tr>
                <td>Location:</td>
                <td>@Html.TextBoxFor(m => m.Location)</td>
            </tr>
            <tr>
                <td>Link:</td>
                <td>@Html.TextBoxFor(m => m.Link)</td>
            </tr>
            <tr>
                <td>Price:</td>
                <td>@Html.TextBoxFor(m => m.Price, "{0:F2}")</td>
            </tr>
            <tr>
                <td>Person:</td>
                <td>@Html.TextBoxFor(m => m.Person)</td>
            </tr>
            <tr>
                <td>Phone:</td>
                <td>@Html.TextBoxFor(m => m.phone)</td>
            </tr>
            <tr>
                <td>Eventstartdate:</td>
                <td>@Html.TextBoxFor(m => m.Eventstartdate, "{0:dd-MM-yyyy}")</td>
            </tr>
            <tr>
                <td>Eventenddate:</td>
                <td>@Html.TextBoxFor(m => m.Eventenddate, "{0:dd-MM-yyyy}")</td>
            </tr>
            <tr>
                <td>
                    Upload Design
                </td>
                <td>
                    <div class="col-lg-8">
                        @if (Model.Image == null)
                        {
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="~/Assets/img/demoUpload.jpg" alt="" /></div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
                                    <span class="btn btn-file btn-primary">
                                        <span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span>
                                        <input type="file" name="file" />
                                    </span> <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="fileupload fileupload-exists" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="~/Assets/img/demoUpload.jpg" alt="" /></div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"><img src="/Content/EventsandtipsFiles/@Model.Image" alt="" style="width:100px;height:100px" /></div>
                                <div>
                                    <span class="btn btn-file btn-primary">
                                        <span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span>
                                        <input type="file" name="file" />
                                    </span> <a href="#" class="btn btn-danger fileupload-exists" data-dismiss="fileupload">Remove</a>
                                </div>
                            </div>
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style="text-align:center" class="form-actions no-margin-bottom">
                        @Html.HiddenFor(m => m.parameter)
                        @Html.HiddenFor(m=>m.eventid)
                        @*@Html.ActionLink("Save", "UserProfileSave", "DashBoard", new { @class = "btn btn-primary btn-lg " })*@
                        <input type="submit" value="Save" class="btn text-muted text-center btn-success" name="Command" />
                    </div>
                </td>
            </tr>
        </table>
    </div>


<div class="table-responsive" style="margin-left:230px;margin-top:30px">

    <table class="table table-striped">
        <h5><b><u>List of @ViewBag.Pagetitle</u></b></h5>
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                @*<th>Description</th>*@
                <th>location,phone</th>
                <th>price</th>
                <th>person</th>
                <th>Eventstartdate - Eventenddate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Eventsandtipslist)
            {
                <tr>
                    <td><a id="example7" href="/Content/EventsandtipsFiles/@item.image" title="Lorem ipsum dolor sit amet"><img width="100px" height="100px" src="/Content/EventsandtipsFiles/@item.image" alt="" /></a></td>
                    <td>@item.Title</td>
                    @*<td><label class="control-label col-lg-4">@item.Description</label></td>*@
                    <td>@item.location,@item.phone</td>
                    <td>@item.price</td>
                    <td>@item.person</td>
                    <td>@item.Eventstartdate - @item.Eventenddate</td>
                    <td>
                        <a href="/admin/Eventsandtips/index?id=@item.EventID&page=@item.Type" class="btn btn-default btn-xs">Update</a> ||
                        <a href="/admin/giftdesigns/Delete?did=@item.EventID" class="btn btn-default btn-xs">Delete</a>
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>
}






