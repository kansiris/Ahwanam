        <div class="row">
            <div class="col-lg-12">


                <h2 class="uk-h3">Quotation Details</h2>
                @if (ViewBag.orderdetails1 != null)
                {
                    @*<p style="text-transform:capitalize;font-weight:bold"> Quotation requested for</p>*@

                    foreach (var item in ViewBag.orderdetails1)
                    {
                        <div class="room_type first">

                            <div class="row">
                                <div class="col-md-4">
                                    @if (item.logo != null)
                                    {
                                        <li>
                                        <img src="../vendorimages/@item.logo" class="img-fluid" alt=""/>

                                            </li>
                                    }
                                    else
                                    {<li>
