@*@model MaaAahwanam.Models.QuoteResponse*@
<link href="~/Assets/jquery.dataTables.css" rel="stylesheet" />
<style>

    .instoption {
        display: none;
    }
</style>
@if (ViewBag.display == "1")
{
    if (ViewBag.records.Count != 0)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" align="right" style="display:none">
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle"><i class="icon-check"></i> </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle"><i class="icon-list"></i> </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle"><i class="icon-link"></i> </button>
                    </div>
                    @*<input type="hidden" id="selectedids" />*@
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Actions</th>
                                        <td style="display:none">ID</td>
                                        <th>BusinessName</th>
                                        <th>Category</th>
                                        <th>Sub-Category</th>
                                        <th>Available dates</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int j = 0; j < ViewBag.records.Count; j++)
                                    {
                                        <tr>
                                            <td>
                                                @*<button class="btn btn-primary">Select</button>*@
                                                <input type="checkbox" class="form-control call-checkbox" value="@ViewBag.records[j][0]#@ViewBag.records[j][1]" onchange="popup('@ViewBag.id','@ViewBag.records[j][3]','@ViewBag.records[j][4]','@ViewBag.records[j][5]','@ViewBag.records[j][0]','@ViewBag.records[j][1]')" />
                                                @*<div class="checkbox anim-checkbox">
                                                        <input type="checkbox" id="ch3" class="form-control success">
                                                        <label for="ch3">Select</label>
                                                    </div>*@
                                            </td>
                                            <td style="display:none">@ViewBag.records[j][0],@ViewBag.records[j][1]</td>
                                            <td>@ViewBag.records[j][3]</td>
                                            <td>@ViewBag.records[j][4]</td>
                                            <td>@ViewBag.records[j][5]</td>
                                            <td>
                                                <p> Dates : @ViewBag.records[j][2]</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div align="center"><button class="btn btn-primary" id="replyquote" type="button">Reply Quotation</button></div>
            </div>
        </div>
    }
    else
    {
        <br /> <br />
        <h2 style="text-align:center">No Vendors Available</h2>
    }

}
else if (ViewBag.novendor != null)
{
    <h2 style="text-align:center">@ViewBag.novendor</h2>
}

<div class="modal fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="display: none;">
    <input type="hidden" id="stype" />
    <input type="hidden" id="substype" />
    <input type="hidden" id="vid" />
    <input type="hidden" id="subvid" />
    <input type="hidden" id="qid" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel"><text id="bname"></text> Installments</h4>
            </div>
            <div class="modal-body">
                <select class="form-control" id="addinstallments">
                    <option>Select Installments</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <br />
                <div class="row form-group">
                    <div class="col-lg-6">
                        <label>Package Amount</label>
                    </div>
                    <div class="col-lg-6">
                        <input class="form-control" type="text" placeholder="Enter Package Amount" id="TotalAmount">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-6">
                        <label>Token Amount</label>
                    </div>
                    <div class="col-lg-6">
                        <input class="form-control" type="text" placeholder="Enter Token Amoun" id="TokenAmount">
                    </div>
                </div>
                <div class="row form-group instoption" id="1">
                    <div class="col-lg-4">
                        <label>First Installment</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Amount" id="firstamount">
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Days" id="firstdays">
                    </div>
                </div>
                @*<br />*@
                <div class="row form-group instoption" id="2">
                    <div class="col-lg-4">
                        <label>Second Installment</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Amount" id="secondamount">
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Days" id="seconddays">
                    </div>
                </div>
                @*<br />*@
                <div class="row form-group instoption" id="3">
                    <div class="col-lg-4">
                        <label>Third Installment</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Amount" id="thirdamount">
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Days" id="thirddays">
                    </div>
                </div>
                @*<br />*@
                <div class="row form-group instoption" id="4">
                    <div class="col-lg-4">
                        <label>Fourth Installment</label>
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Amount" id="fourthamount">
                    </div>
                    <div class="col-lg-4">
                        <input class="form-control" type="text" placeholder="Enter Days" id="fourthdays">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveDetails()">Save</button>
                @*<button type="button" class="btn btn-danger">Cancel</button>*@
            </div>
        </div>
    </div>
</div>


    
