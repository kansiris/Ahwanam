@model MaaAahwanam.Models.IssueDetail
@{
    ViewBag.Title = "Testimonial Details";
    Layout = "~/Areas/Admin/Views/Shared/MainMaster.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}
<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> Comment Details View</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/Others/Comments" class="btn btn-primary btn-xs">Comments</a>&nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-xs">Comment Details</a> </div>

            </div>
            </br>
            @foreach (var item in ViewBag.record)
            {
                <div class="col-lg-6">
                    <b>TicketId #: </b> @item.TicketId
                </div>
                <div class="col-lg-6">
                    <p><b>Service Type : @item.ServicType</b></p>
                </div>
                <div class="col-lg-6">
                    <b>Created By :</b> @item.BusinessName
                </div>
                <div class="col-lg-6">
                    <p>
                        <b>Created Date: </b>@item.UpdatedDate<br />
                        <b>Last Update: </b>
                    </p>
                </div>
            }
            @*<div class="row">*@
            
          
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div align="right">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo1" class="btn btn-primary btn-xs">Reply</a>
                    <div id="collapseTwo1" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="control-label col-lg-4" for="reservation"></label>
                                <div class="col-lg-12">
                                    @*<textarea id="autosize" class="validate[required] form-control" name="req" id="req"></textarea>*@
                                    @Html.TextAreaFor(model => model.Msg,new { @class = "form-control", @id = "autosize" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4" for="reservation"></label>
                                <div class="col-lg-12">
                                    <button class="btn text-muted text-center btn-danger" name="Command" type="submit">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class=" panel-heading" style="height:35px">
                        <div id="div-left" style="float:left">Msg By:Admin</div>
                        <div id="div-right" style="float:right">Date:11-02-2016</div>
                    </div>
                    <div class="panel-body">
                        <p align="left"><b>aasfsf dgdfghjjfkh fghfhjkfhfhg</b></p>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>



<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}