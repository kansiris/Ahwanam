@model MaaAahwanam.Models.TestimonialDetails

@if (this.Model.ntype == 1)
{
  if (Model.testmonialslist.Count()!=0)
  { 
    <div class="heading-title">
                <h2>What Our Customers Say!</h2>
    </div>         
    <div id="testimonials" class="owl-carousel owl-theme">
        @foreach (var item in Model.testmonialslist)
        {
            <div class="item">

                <div class="studentPic">
                    <div class="studentPic-inner">
                        <div> <img src="../Content/AdminUserfiles/@item.UserImage" alt="student"> </div>
                    </div>
                </div>
                <div class="studentTest">
                    <p>
                        @item.Description.ToString().Substring(0, 200)
                        <a href="~/Testimonials">......More</a>
                    </p>
                    <div class="stuTitle">@item.Name

</div>
                    <small>@item.City</small>
                </div>
            </div>
        }       
    </div>
  }
}
else
{
<ul>
    @{ int i = 1; }
@foreach (var item in Model.testmonialslist)
  {     
    if(i%2==1)
    { 
    <li>
        <div class="test_content">
            <span><i class="ti-quote-left"></i></span>
            <p>@item.Description</p>
            <div class="arrow right_arrow"></div>
        </div>
        <div class="test_name">
            <div class="test_thumb">
                <img src="../Content/AdminUserfiles/@item.UserImage">
            </div>
            <div class="test_heading">
                <h3>@item.Name</h3>
                <small>@item.City</small>
            </div>
        </div>
    </li>
    }
    if(i%2==0)
    {
    <li>
        <div class="test_name">
            <div class="test_heading">
                <h3>@item.Name</h3>
                <small>@item.City</small>
            </div>
            <div class="test_thumb">
                <img src="../Content/AdminUserfiles/@item.UserImage">
            </div>

        </div>
        <div class="test_content2">
            <span><i class="ti-quote-left"></i></span>
            <p>@item.Description</p>
            <div class="arrow right_arrow"></div>
        </div>

    </li>
    }
      i++;
 }
    @if(Model.testmonialslist.Count()>=10)
    { 
 <div class="loadmore">
        <a href="#"> <i class="ti-reload"></i> Load More</a>
    </div>
    }
</ul>
}

