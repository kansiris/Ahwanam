@model Tuple<MaaAahwanam.Web.Areas.Admin.Models.UserLoginDetailsModel>
@{
    ViewBag.Title = "BuyNowDet";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> Buying Service Details</h2>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-lg-12">
                <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/BuyNowAdmin/Index" class="btn btn-primary btn-xs">Buying Service</a>&nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-xs">Buying Service Details</a> </div>
                </br>
                @*<h4><i class="icon-th-list"></i> </h4>*@

            </div>
            </br>
            <!-- Tabls Starts here -->

            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading"> Customer Information </div>
                    <div class="panel-body">
                        <p align="left"><b>Customer Name :</b>@this.Model.Item2.FirstName  @this.Model.Item2.LastName</p>
                        @if (this.Model.Item2.Address != null || this.Model.Item2.City!=null || this.Model.Item2.ZipCode!=null)
                        { 
                        <p align="left"><b>Address:</b>@this.Model.Item2.Address <br/> @this.Model.Item2.City <br/> @this.Model.Item2.ZipCode</p>
                        }
                        <p align="left"><b>Email :</b>  @this.Model.Item2.UserName</p>
                        <p><b>Phone:</b>@this.Model.Item2.UserPhone </p>
                    </div>
                </div>
            </div>
@foreach (var item in Model.Item1)
                    {
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading"> Event Details </div>
                    <div class="panel-body">
                        <p align="left"><b>Vendor :</b>@item.BusinessName</p>
                        <p align="left"><b>Vendor :</b>@item.ServiceType</p>
                        <p align="left"><b>EventDates:</b>@item.EventDates</p>
                        <p align="left"><b>EventStartTime:</b>@item.EventStartTime - <b>EventEndTime:</b>@item.EventEndTime</p>
                        <p align="left"><b>EventAddress:</b>@item.EventAddress</p>
                        <p align="left"><b>EventLocation:</b>@item.EventLocation</p>
                        <p align="left"><b>EventCity:</b>@item.EventCity</p>
                    </div>
                </div>
            </div>
}
            <!-- Tabs Ends here -->
        </div>
       
       
    </div>
</div>


@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}
