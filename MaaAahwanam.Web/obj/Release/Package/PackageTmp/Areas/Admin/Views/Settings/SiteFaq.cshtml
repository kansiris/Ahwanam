@model MaaAahwanam.Web.Areas.Admin.Models.SiteFaqModel
@{
    ViewBag.Title = "SiteFaq";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES --> 
    <link rel="stylesheet" href="~/Assets/plugins/wysihtml5/dist/bootstrap-wysihtml5-0.0.2.css" />
    <!-- END PAGE LEVEL  STYLES -->
}

<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> Site Faq </h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("save", "Settings", FormMethod.Post, new { @class = "form-horizontal", @id = "popup-validation", enctype = "multipart/form-data" }))
                {
                    <div class="box">
                        <header>
                            <div class="icons"><i class="icon-th-large"></i></div>
                            <h5>Question</h5>
                            @Html.HiddenFor(m => m.FaqId)
                            @Html.TextAreaFor(m => m.Question, new { @class = "validate[required] form-control" })
                        </header>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="box">
                                    <header>
                                        <div class="icons"><i class="icon-th-large"></i></div>
                                        <h5> Answer</h5>
                                    </header>
                                    <div id="div-1" class="body collapse in">
                                        @Html.TextAreaFor(m => m.Answer, new { @class = "validate[required] form-control", id = "wysihtml5", rows = "5" })
                                        <div class="form-actions">
                                            <br />
                                            <input type="submit" value="Save" class="btn btn-primary" name="Command" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Comments -->
        <div class="row"></div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th> Faq# </th>
                        <th>FAQ'S</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FaqsList)
                    {
                        <tr>
                            <td>@item.FaqId</td>
                            <td>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="panel-group" id="accordion">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#@item.FaqId">@item.Question</a>
                                                    </h4>
                                                </div>
                                                <div id="@item.FaqId" class="panel-collapse collapse collapse">
                                                    <div class="panel-body">
                                                        @item.Answer
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>                           
                            <td>
                            <a href="../Settings/SiteFaq?id=@item.FaqId" class="btn btn-default btn-xs">Edit</a><a href="#" class="btn btn-default btn-xs">Delete</a>
                            </td>   
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <!-- PAGE LEVEL SCRIPTS -->
    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Assets/plugins/wysihtml5/lib/js/wysihtml5-0.3.0.js"></script>
    <script src="~/Assets/plugins/bootstrap-wysihtml5-hack.js"></script>
    <script src="~/Assets/js/editorInit.js"></script>
    <script>
        $(function () { formWysiwyg(); });
    </script>
    <!-- END PAGE LEVEL SCRIPTS -->
}

