@model MaaAahwanam.Models.ServiceRequest
@{
    ViewBag.Title = "Requestdetails";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}

@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}
<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> @ViewBag.Pagetitle Request Details</h2>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-lg-12">
                <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/ServiceRequest/requests?page=@ViewBag.Pagetitle" class="btn btn-primary btn-xs">@ViewBag.Pagetitle Requests</a></div>
                </br>
                <h4><i class="icon-th-list"></i> Request # @*@this.Model.InvitationReqId | @this.Model.RequestDate*@</h4>
            </div>
            </br>
            <!-- Tabls Starts here -->

            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading"> Request Details </div>
                    <div class="panel-body">
                        <p><b>Request #:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].EventID </p>
                        <p><b>Event Name #:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].EventName</p>
                        <p><b>Event Date #:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].CreatedDate</p>
                        <p><b>Request Date:</b>@this.Model.SP_ADMIN_Servicerequest_list[0].CreatedDate</p>
                        <p><b>Request Status:</b> <a href="#" class="btn btn-primary btn-sm" style="font-family:'Browallia New'">Request Raised</a></p>
                        <p><b>Service Type:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].ServiceType </p>

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading"> Customer Information </div>
                    <div class="panel-body">
                        <p><b>Customer Id :</b>@this.Model.SP_ADMIN_Servicerequest_list[0].CreatedBy </p>
                        <p><b>Customer Name :</b> @this.Model.SP_ADMIN_Servicerequest_list[0].Creater</p>
                        <p><b>Email:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].Email<a href="#" class="btn btn-primary btn-sm">Verified</a></p>
                        <p><b>Phone:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].Phone<a href="#" class="btn btn-primary btn-sm">Not Verified</a></p>
                        <p><b>Address:</b> @this.Model.SP_ADMIN_Servicerequest_list[0].EventAddress,@this.Model.SP_ADMIN_Servicerequest_list[0].EventLocation</p>

                    </div>
                </div>
            </div>
            <!-- Tabs Ends here -->
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"> Shopping Cart </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Design ID</th>
                                    <th>Card Type</th>
                                    <th>Service Type</th>
                                    <th>No. of Cards</th>
                                    <th>Delivery</th>
                                    <th>Address Book</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>WC-FAM-09</td>
                                    <td>Wedding Card - Family</td>
                                    <td>Hard Copy</td>
                                    <td>250</td>
                                    <td>
                                        POST</br>
                                        Email</br>
                                        SMS
                                    </td>
                                    <td>No</td>
                                    <td><a href="#" class="btn btn-primary btn-xs btn-rect">New</a></td>
                                    <td><a href="#" class="btn btn-default btn-xs">Edit</a><a href="#" class="btn btn-default btn-xs">Delete</a></td>
                                </tr>
                                <tr>
                                    <td>WC-PER-03</td>
                                    <td>Wedding Card - Personal</td>
                                    <td>Soft Copy</td>
                                    <td>100</td>
                                    <td>
                                        Email</br>
                                        SMS
                                    </td>
                                    <td>No</td>
                                    <td><a href="#" class="btn btn-primary btn-xs btn-rect">New</a></td>
                                    <td><a href="#" class="btn btn-default btn-xs">Edit</a><a href="#" class="btn btn-default btn-xs">Delete</a></td>
                                </tr>
                                <tr>
                                    <td>WC-PRE-06</td>
                                    <td>Wedding Card - Premium</td>
                                    <td>Hard Copy - Premium</td>
                                    <td>50</td>
                                    <td>
                                        Premium</br>
                                        Email</br>
                                        SMS
                                    </td>
                                    <td>No</td>
                                    <td><a href="#" class="btn btn-primary btn-xs btn-rect">New</a></td>
                                    <td><a href="#" class="btn btn-default btn-xs">Edit</a><a href="#" class="btn btn-default btn-xs">Delete</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <!-- Comments -->
        <div class="row">
            <div class="col-lg-7">
                <div class="chat-panel panel panel-success">
                    <div class="panel-heading"> <i class="icon-comments"></i> Comments </div>
                    <div class="panel-body">
                        <ul class="chat">
                            <li class="right clearfix">
                                <span class="chat-img pull-right"> <img src="~/Assets/img/2.png" alt="User Avatar" class="img-circle" /> </span>
                                <div class="chat-body clearfix">
                                    <div class="header"> <small class=" text-muted label label-info"> <i class="icon-time"></i> 13 mins ago</small> <strong class="pull-right primary-font"> MaAdmin</strong> </div>
                                    <br />
                                    <p> Sure Rahul..</p>
                                </div>
                            </li>
                            <li class="left clearfix">
                                <span class="chat-img pull-left"> <img src="~/Assets/img/3.png" alt="User Avatar" class="img-circle" /> </span>
                                <div class="chat-body clearfix">
                                    <div class="header"> <strong class="primary-font"> Rahul </strong> <small class="pull-right text-muted label label-warning"> <i class="icon-time"></i> 14 mins ago </small> </div>
                                    <br />
                                    <p>Hi MaAdmin, Please send me few more quotations </p>
                                </div>
                            </li>
                            <li class="right clearfix">
                                <span class="chat-img pull-right"> <img src="~/Assets/img/4.png" alt="User Avatar" class="img-circle" /> </span>
                                <div class="chat-body clearfix">
                                    <div class="header"> <small class=" text-muted label label-primary"> <i class="icon-time"></i> 15 mins ago</small> <strong class="pull-right primary-font"> MaAdmin</strong> </div>
                                    <br />
                                    <p> Dear Rahul, We have sent you the quotations...Please check your inbox. </p>
                                </div>
                            </li>
                            <li class="left clearfix">
                                <span class="chat-img pull-left"> <img src="assets/img/3.png" alt="User Avatar" class="img-circle" /> </span>
                                <div class="chat-body clearfix">
                                    <div class="header"> <strong class="primary-font"> Rahul </strong> <small class="pull-right text-muted label label-warning"> <i class="icon-time"></i> 15 mins ago </small> </div>
                                    <br />
                                    <p> Hi MaAdmin, Please send me the quotaions asap.</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input id="Text1" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" id="Button1">
                                    Send
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="panel panel-danger">
                    <div class="panel-heading"> <i class="icon-bell"></i> Request History </div>
                    <div class="panel-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item"> <i class=" icon-comment"></i> New Comment <span class="pull-right text-muted small"><em> 4 minutes ago</em> </span> </a>
                            <a href="#" class="list-group-item"> <i class="icon-envelope"></i> Message Received <span class="pull-right text-muted small"><em> 28 minutes ago</em> </span> </a>
                            <a href="#" class="list-group-item"> <i class="icon-envelope"></i> Message Sent <span class="pull-right text-muted small"><em> 27 minutes ago</em> </span> </a>
                            <a href="#" class="list-group-item"> <i class="icon-tasks"></i> New Task <span class="pull-right text-muted small"><em>43 minutes ago</em> </span> </a>
                            <a href="#" class="list-group-item"> <i class="icon-ok"></i> New Order Placed <span class="pull-right text-muted small"><em>9:49 AM</em> </span> </a>
                            <a href="#" class="list-group-item"> <i class=" icon-money"></i> Payment Received <span class="pull-right text-muted small"><em>Yesterday</em> </span> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- comments end -->
    </div>
</div>
<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}


