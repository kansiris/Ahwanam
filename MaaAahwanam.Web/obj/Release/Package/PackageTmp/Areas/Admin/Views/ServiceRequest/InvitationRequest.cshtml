@model MaaAahwanam.Models.ServiceRequest
@{
    ViewBag.Title = "InvitationRequest";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}

<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> Invitation Requests </h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" align="right">
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle"><i class="icon-check"></i> </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle"><i class="icon-list"></i> </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle"><i class="icon-link"></i> </button>
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Req #</th>
                                        <th>Req Date</th>
                                        <th>Customer name</th>
                                        <th>Customer name</th>
                                        <th>Invitation Type</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.eventmasterlist)
                                    {
                                        <tr class="even gradeX">
                                            <td>
                                                @item.EventID
                                            </td>
                                            <td>
                                                @item.CreatedDate
                                            </td>
                                            <td>
                                                @item.EventName
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>

                                            <td>
                                                @item.ServiceType
                                            </td>
                                            <td>
                                                @*<a href="#" class="btn btn-primary btn-xs btn-rect"> @item.Status</a>*@
                                                <a href="#" class="btn btn-primary btn-xs btn-rect"> Status </a>
                                            </td>
                                            <td>
                                                <a href="../ServiceRequest/InviReqDet?id=@item.EventID" class="btn btn-default btn-xs"> View </a>
                                                <a href="#" class="btn btn-default btn-xs">Edit</a>
                                                <a href="#" class="btn btn-default btn-xs">Delete</a>
                                            </td>
                                        </tr>

                                    }
                                    @*<tr class="even gradeX">
                                            <td>
                                               InvitationReqId_Sam
                                            </td>
                                            <td>
                                               RequestDate_Sam
                                            </td>
                                            <td>
                                                FirstName LastName_Sam
                                            </td>

                                            <td>
                                                InvitationType_Sam
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-primary btn-xs btn-rect">Status_Sam</a>
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-default btn-xs"> View </a>
                                                <a href="#" class="btn btn-default btn-xs">Edit</a>
                                                <a href="#" class="btn btn-default btn-xs">Delete</a>
                                            </td>
                                        </tr>*@

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}
