@model MaaAahwanam.Web.Areas.Admin.Models.IssueTicketsModel
@{
    ViewBag.Title = "TicketDetView";
    Layout = "~/Areas/Admin/Views/Shared/Master.cshtml";
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}

<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">
                <h2> Ticket Details View</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/IssueTicketsAdmin/AdminTicketIndex" class="btn btn-primary btn-xs">Issue Ticket</a>&nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-xs">Ticket Details View</a> </div>
             
            </div>
            </br>

            @*<div class="row">*@
                @foreach (var item in Model.IssueList)
                {
                    <div class="col-lg-6">
                        <b>TicketId #: @item.Ticket_Id</b>
                    </div>
                    <div class="col-lg-6">
                        <b>Status: @item.Status</b>
                    </div>
                    <div class="col-lg-6">
                        <b>Created By : @item.CreatedBy</b>
                    </div>
                    <div class="col-lg-6">
                        <p>
                            <b>Created Date: @item.CreatedDate</b><br />
                            <b>Last Update: @item.ClosedDate</b>
                        </p>
                    </div>
                    <div class="col-lg-6">
                        <p><b>Subject :@item.Subject</b></p>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div align="right">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo1" class="btn btn-primary btn-xs">Reply</a>
                        <div id="collapseTwo1" class="panel-collapse collapse">
                            <div class="panel-body">
                                @using (Html.BeginForm("Update", "IssueTicketsAdmin", FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                    <div class="form-group">
                                        <label class="control-label col-lg-4" for="reservation"></label>
                                        <div class="col-lg-12">
                                            @Html.Hidden("id", ViewContext.RouteData.Values["id"])
                                            @Html.TextAreaFor(m => m.Msg, 10, 55, new { @class = "form-control", placeholder = "Msg" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-4" for="reservation"></label>
                                        <div class="col-lg-12">
                                            <button class="btn text-muted text-center btn-danger" name="Command" type="submit">Submit</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-lg-12">
                    @foreach (var item in Model.IssueDetailsList)
                    {
                        <div class="panel panel-primary">
                            <div class=" panel-heading" style="height:35px">
                                <div id="div-left" style="float:left">Msg By:@item.RepliedBy</div>
                                <div id="div-right" style="float:right">Date:@item.ReplayedDate</div>
                            </div>
                            <div class="panel-body">
                                <p align="left"><b>@item.Msg</b></p>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>

</div>







@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}
